@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-10">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
            </div>

            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="Input.Plz"></label>
                    <input asp-for="Input.Plz" class="form-control" />
                </div>
                <div class="form-group col-md-8">
                    <label asp-for="Input.Ort"></label>
                    <input asp-for="Input.Ort" class="form-control" />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-10">
                    <label asp-for="Input.Strasse"></label>
                    <input asp-for="Input.Strasse" class="form-control" />
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="Input.Hausnummer"></label>
                    <input asp-for="Input.Hausnummer" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Input.Geburtsdatum"></label>
                <input asp-for="Input.Geburtsdatum" class="form-control" />
            </div>
            
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-2">
        
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
