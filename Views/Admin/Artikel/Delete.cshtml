@model it_shop_app.Models.Artikel
@{
    ViewData["Title"] = "Löschen - Artikel";
}

<div>
    <h1 class="display-3">Löschen</h1>
    <hr/>
    <dl>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bezeichnung)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bezeichnung)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Beschreibung)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Beschreibung)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preis)
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Löschen" class="btn btn-danger" /> |
        <a asp-action="Artikel_Index">Zurück zur Liste</a>
    </form>
</div>